{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "lib": [
      "dom",
      "es5",
      "es2015.iterable",
      "es2015.collection",
      "es2015.promise",
      "es2015.core"
    ],
    "target": "es2015",
    "module": "esnext",
    "declaration": true,
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "react",
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts*"
  ]
}
